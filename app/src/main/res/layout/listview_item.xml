<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:scrollIndicators="right"
    android:nestedScrollingEnabled="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/listItemTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listItemImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This event is about something something something"
        android:id="@+id/listItemBody"
        android:layout_below="@+id/listItemTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listItemImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        />




</RelativeLayout>
